# Web Home: http://www.syncy.cn

START=99
STOP=10

start() {
        /usr/bin/syncy.py &
}

stop() {
        [ -e /var/run/syncy.pid ] && {
        	sypid=$(cat /var/run/syncy.pid)
        	kill $sypid
        }
}

restart() {
	[ -e /var/run/syncy.pid ] && {
		sypid=$(cat /var/run/syncy.pid)
		kill $sypid
	}
	sleep 1
	/usr/bin/syncy.py &
}

